<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".place.PlaceFragment">

        <TextView
            android:id="@+id/place_title"
            style="?attr/textAppearanceHeadline5"
            android:layout_width="376dp"
            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorAccent"
            android:padding="8dp"
            android:text="場所一覧"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/secondaryDarkColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/place1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorAccent"
            android:text="@string/place1"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place_title" />

        <Button
            android:id="@+id/place2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/margin"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorAccent"
            android:text="@string/place2"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place1" />

        <Button
            android:id="@+id/place3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/margin"
            android:layout_marginStart="44dp"
            android:layout_marginTop="136dp"
            android:background="@color/colorAccent"
            android:text="@string/place3"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>