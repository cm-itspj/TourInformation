<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
            name="placedetailViewModel"
            type="jp.co.cybermissions.com.example.tourinformation.place_detail.PlaceDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".place_detail.PlaceDetailFragment">


        <TextView
            android:id="@+id/detail_text"
            android:layout_width="363dp"
            android:layout_height="448dp"
            android:text="@{placedetailViewModel.currentplace}"
            android:textColor="@color/black"
            android:textSize="@dimen/detail_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/restaurant"
            android:layout_width="213dp"
            android:layout_height="54dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="44dp"
            android:background="@color/colorAccent"
            android:text="@string/restaurant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_text" />

        <Button
            android:id="@+id/hotel"
            android:layout_width="195dp"
            android:layout_height="46dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="12dp"
            android:text="@string/hotel"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="156dp"
            android:layout_marginTop="12dp"
            android:text="@string/cancel"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hotel" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>